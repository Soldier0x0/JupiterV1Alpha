# Jupiter SIEM Backend Environment Configuration
# RENAME THIS FILE TO .env AFTER CREATION
# DO NOT COMMIT THIS FILE TO VERSION CONTROL

# =============================================================================
# BACKEND SPECIFIC CONFIGURATION
# =============================================================================
BACKEND_DEBUG=false
BACKEND_RELOAD=false
BACKEND_WORKERS=4
BACKEND_HOST=0.0.0.0
BACKEND_PORT=8001

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
DUCKDB_PATH=data/jupiter_siem.db
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
JWT_SECRET_KEY=jupiter_siem_production_secret_key_2024_very_secure_min_64_chars_long
JWT_ALGORITHM=HS256
JWT_ACCESS_TOKEN_EXPIRE_MINUTES=1440

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
SUPER_ADMIN_EMAIL=admin@projectjupiter.in
SUPER_ADMIN_PASSWORD=your_very_secure_admin_password
SUPER_ADMIN_TENANT_NAME=MainTenant

# =============================================================================
# EMAIL CONFIGURATION (Microsoft 365 Business Basic)
# =============================================================================
EMAIL_ENABLED=true
EMAIL_HOST=smtp.office365.com
EMAIL_PORT=587
EMAIL_USER=admin@projectjupiter.in
EMAIL_PASSWORD=your_admin_email_password
EMAIL_USE_TLS=true
EMAIL_FROM_NAME=Jupiter SIEM
EMAIL_FROM_ADDRESS=admin@projectjupiter.in

# Email Recipients (All notifications go to your personal email)
ADMIN_EMAIL=your_personal_email@gmail.com
SECURITY_ALERT_EMAIL=your_personal_email@gmail.com
SYSTEM_NOTIFICATION_EMAIL=your_personal_email@gmail.com

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=https://siem.projectjupiter.in,https://projectjupiter.in,https://www.projectjupiter.in

# =============================================================================
# AI/ML CONFIGURATION
# =============================================================================
AI_ENABLED=true
AI_DEVICE=cuda
AI_MAX_MEMORY_USAGE=0.8
AI_QUANTIZATION=true
AI_BATCH_SIZE=10
AI_MAX_CONCURRENT_REQUESTS=5

# =============================================================================
# SECURITY SETTINGS
# =============================================================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
ENABLE_2FA=true
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/app/logs/jupiter.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
ALERT_EMAIL=alerts@projectjupiter.in

# =============================================================================
# THREAT INTELLIGENCE CONFIGURATION
# =============================================================================
THREAT_INTEL_ENABLED=true
THREAT_INTEL_SOURCES=virustotal,abuseipdb,shodan
THREAT_INTEL_API_KEY_VT=your_virustotal_api_key
THREAT_INTEL_API_KEY_ABUSE=your_abuseipdb_api_key
THREAT_INTEL_API_KEY_SHODAN=your_shodan_api_key

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Kafka for log streaming
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_OCSF=ocsf-logs
KAFKA_TOPIC_ALERTS=security-alerts

# Elasticsearch for log storage
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=jupiter-siem

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SLACK_ENABLED=false
NOTIFICATION_WEBHOOK_ENABLED=false
NOTIFICATION_SLACK_WEBHOOK=your_slack_webhook_url
NOTIFICATION_WEBHOOK_URL=your_webhook_url

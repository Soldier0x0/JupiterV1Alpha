# JupiterEmerge SIEM - Production Environment Configuration
# Debian 13 + Cloudflare Tunnel + projectjupiter.in subdomain

# =============================================================================
# DOMAIN CONFIGURATION
# =============================================================================
DOMAIN=siem.projectjupiter.in
MAIN_DOMAIN=projectjupiter.in
BACKEND_PORT=8001
FRONTEND_PORT=3000
CLOUDFLARE_TUNNEL_PORT=8080

# =============================================================================
# DATABASE CONFIGURATION
# =============================================================================
MONGO_URL=mongodb://localhost:27017/jupiter_siem
JWT_SECRET_KEY=jupiter_siem_production_secret_key_$(openssl rand -hex 32)

# =============================================================================
# EMAIL CONFIGURATION
# =============================================================================
EMAIL_HOST=smtp.outlook.com
EMAIL_PORT=587
EMAIL_USER=harsha@projectjupiter.in
EMAIL_PASSWORD=your_secure_email_password
EMAIL_USE_TLS=true

# =============================================================================
# ADMIN CONFIGURATION
# =============================================================================
SUPER_ADMIN_EMAIL=admin@projectjupiter.in
SUPER_ADMIN_PASSWORD=your_very_secure_admin_password
SUPER_ADMIN_TENANT_NAME=MainTenant

# =============================================================================
# CORS CONFIGURATION
# =============================================================================
CORS_ORIGINS=https://siem.projectjupiter.in,https://projectjupiter.in,https://www.projectjupiter.in

# =============================================================================
# AI CONFIGURATION (RTX 3060 Optimized)
# =============================================================================
AI_ENABLED=true
AI_MODELS_PATH=/home/user/jupiter-siem/models
AI_VECTOR_STORE_PATH=/home/user/jupiter-siem/vector_store
AI_MAX_MEMORY_USAGE=0.8
AI_DEVICE=cuda
AI_QUANTIZATION=true
AI_BATCH_SIZE=10
AI_MAX_CONCURRENT_REQUESTS=5

# Model configurations for RTX 3060
AI_QUERY_GENERATOR_MODEL=microsoft/DialoGPT-medium
AI_THREAT_ANALYZER_MODEL=microsoft/DialoGPT-large
AI_LOG_ANALYZER_MODEL=distilbert-base-uncased
AI_EMBEDDING_MODEL=sentence-transformers/all-MiniLM-L6-v2

# =============================================================================
# NIFI CONFIGURATION
# =============================================================================
NIFI_BASE_URL=http://localhost:8080
NIFI_USERNAME=admin
NIFI_PASSWORD=admin
NIFI_PROCESS_GROUP_ID=root
NIFI_EVTX_INPUT_DIR=/var/log/evtx
NIFI_OCSF_OUTPUT_TOPIC=ocsf-logs

# =============================================================================
# SECURITY CONFIGURATION
# =============================================================================
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
ENABLE_2FA=true
SESSION_TIMEOUT=3600
MAX_LOGIN_ATTEMPTS=5
LOCKOUT_DURATION=900

# =============================================================================
# LOGGING CONFIGURATION
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=/home/user/jupiter-siem/logs/jupiter.log
LOG_MAX_SIZE=100MB
LOG_BACKUP_COUNT=5
LOG_FORMAT=json

# =============================================================================
# PERFORMANCE CONFIGURATION
# =============================================================================
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=10M
GZIP_COMPRESSION=true

# =============================================================================
# MONITORING CONFIGURATION
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30
ALERT_EMAIL=alerts@projectjupiter.in

# =============================================================================
# BACKUP CONFIGURATION
# =============================================================================
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/home/user/backups/jupiter-siem

# =============================================================================
# CLOUDFLARE CONFIGURATION
# =============================================================================
CLOUDFLARE_TUNNEL_NAME=jupiter-siem
CLOUDFLARE_TUNNEL_CONFIG=/etc/cloudflared/config.yml
CLOUDFLARE_CREDENTIALS_FILE=/etc/cloudflared/jupiter-siem.json

# =============================================================================
# SSL/TLS CONFIGURATION
# =============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/siem.projectjupiter.in/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/siem.projectjupiter.in/privkey.pem
SSL_REDIRECT_HTTP=true

# =============================================================================
# FIREWALL CONFIGURATION
# =============================================================================
UFW_ENABLED=true
ALLOWED_PORTS=22,80,443,8080
BLOCKED_COUNTRIES=CN,RU,IR,KP
FAIL2BAN_ENABLED=true

# =============================================================================
# DEVELOPMENT/DEBUG CONFIGURATION
# =============================================================================
DEBUG=false
RELOAD=false
PROFILING=false
MOCK_DATA=false

# =============================================================================
# INTEGRATION CONFIGURATION
# =============================================================================
# Kafka for log streaming
KAFKA_BROKERS=localhost:9092
KAFKA_TOPIC_OCSF=ocsf-logs
KAFKA_TOPIC_ALERTS=security-alerts

# Elasticsearch for log storage
ELASTICSEARCH_URL=http://localhost:9200
ELASTICSEARCH_INDEX_PREFIX=jupiter-siem

# Redis for caching
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# THREAT INTELLIGENCE CONFIGURATION
# =============================================================================
THREAT_INTEL_ENABLED=true
THREAT_INTEL_SOURCES=virustotal,abuseipdb,shodan
THREAT_INTEL_API_KEY_VT=your_virustotal_api_key
THREAT_INTEL_API_KEY_ABUSE=your_abuseipdb_api_key
THREAT_INTEL_API_KEY_SHODAN=your_shodan_api_key

# =============================================================================
# COMPLIANCE CONFIGURATION
# =============================================================================
COMPLIANCE_FRAMEWORK=ISO27001
AUDIT_LOGGING=true
DATA_RETENTION_DAYS=2555
ENCRYPTION_AT_REST=true
ENCRYPTION_IN_TRANSIT=true

# =============================================================================
# NOTIFICATION CONFIGURATION
# =============================================================================
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SLACK_ENABLED=false
NOTIFICATION_WEBHOOK_ENABLED=false
NOTIFICATION_SLACK_WEBHOOK=your_slack_webhook_url
NOTIFICATION_WEBHOOK_URL=your_webhook_url

# =============================================================================
# CUSTOM CONFIGURATION
# =============================================================================
# Add any custom configuration here
CUSTOM_FEATURES_ENABLED=true
EXPERIMENTAL_AI_FEATURES=false
BETA_FEATURES_ENABLED=false

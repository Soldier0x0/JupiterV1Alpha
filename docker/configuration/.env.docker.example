# Jupiter SIEM Docker Production Environment
# Copy this to .env.docker and customize for your environment

# Project Configuration
PROJECT_NAME=jupiter-docker
APP_ENVIRONMENT=production

# Security (Generate new keys for production!)
JWT_SECRET_KEY=change_me_generate_new_key
REDIS_PASSWORD=change_me_redis_password
GRAFANA_PASSWORD=change_me_grafana_password

# Email Configuration (Configure for production use)
EMAIL_HOST=smtp.outlook.com
EMAIL_PORT=587
EMAIL_USER=your-email@domain.com
EMAIL_PASSWORD=your-email-password
EMAIL_USE_TLS=true

# Admin Configuration
SUPER_ADMIN_EMAIL=admin@projectjupiter.in
SUPER_ADMIN_PASSWORD=ChangeMe123!
SUPER_ADMIN_TENANT_NAME=MainTenant

# CORS Configuration (Update for your domain)
CORS_ORIGINS=http://localhost:8080,https://localhost:8443,https://yourdomain.com

# Database Configuration
DUCKDB_PATH=/app/data/jupiter_siem.db

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_RETENTION_DAYS=30
BACKUP_SCHEDULE=0 2 * * *

# Monitoring Configuration
MONITORING_ENABLED=true
PROMETHEUS_RETENTION=200h

# Performance Tuning
WORKER_PROCESSES=4
WORKER_CONNECTIONS=1024
NGINX_CLIENT_MAX_BODY_SIZE=10M

# SSL Configuration
SSL_ENABLED=true
SSL_REDIRECT_HTTP=true

# Security Headers
SECURITY_HEADERS_ENABLED=true
HSTS_MAX_AGE=31536000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60

# Logging Configuration
LOG_LEVEL=INFO
LOG_FORMAT=json
LOG_RETENTION_DAYS=30
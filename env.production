# Jupiter SIEM - Production Environment Configuration
# RENAME THIS FILE TO .env.production AFTER CREATION
# DO NOT COMMIT THIS FILE TO VERSION CONTROL

# =============================================================================
# PRODUCTION OVERRIDES
# =============================================================================
APP_ENVIRONMENT=production
DEBUG=false
RELOAD=false
LOG_LEVEL=INFO

# =============================================================================
# API CONFIGURATION (Production)
# =============================================================================
API_URL=https://siem.projectjupiter.in
WS_URL=wss://siem.projectjupiter.in
REACT_APP_API_URL=https://siem.projectjupiter.in
REACT_APP_WS_URL=wss://siem.projectjupiter.in
REACT_APP_DEBUG=false

# =============================================================================
# DATABASE CONFIGURATION (Production)
# =============================================================================
MONGO_URL=mongodb://admin:password@mongodb:27017/jupiter_siem?authSource=admin
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=your_redis_password

# =============================================================================
# SECURITY CONFIGURATION (Production)
# =============================================================================
JWT_SECRET_KEY=jupiter_siem_production_secret_key_2024_very_secure_min_64_chars_long
ENABLE_RATE_LIMITING=true
ENABLE_2FA=true
SESSION_TIMEOUT=3600

# =============================================================================
# ADMIN CONFIGURATION (Production)
# =============================================================================
SUPER_ADMIN_EMAIL=admin@projectjupiter.in
SUPER_ADMIN_PASSWORD=your_very_secure_admin_password
SUPER_ADMIN_TENANT_NAME=MainTenant

# =============================================================================
# EMAIL CONFIGURATION (Production)
# =============================================================================
EMAIL_HOST=smtp.outlook.com
EMAIL_PORT=587
EMAIL_USER=harsha@projectjupiter.in
EMAIL_PASSWORD=your_secure_email_password
EMAIL_USE_TLS=true

# =============================================================================
# AI/ML CONFIGURATION (Production)
# =============================================================================
AI_ENABLED=true
AI_DEVICE=cuda
AI_MAX_MEMORY_USAGE=0.8
AI_QUANTIZATION=true
AI_BATCH_SIZE=10
AI_MAX_CONCURRENT_REQUESTS=5

# =============================================================================
# MONITORING CONFIGURATION (Production)
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=9090
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# CLOUDFLARE CONFIGURATION (Production)
# =============================================================================
CLOUDFLARE_ENABLED=true
CLOUDFLARE_EMAIL=harsha@projectjupiter.in
CLOUDFLARE_API_KEY=your_cloudflare_api_key
REACT_APP_CLOUDFLARE_ENABLED=true

# =============================================================================
# SSL/TLS CONFIGURATION (Production)
# =============================================================================
SSL_ENABLED=true
SSL_CERT_PATH=/etc/letsencrypt/live/siem.projectjupiter.in/fullchain.pem
SSL_KEY_PATH=/etc/letsencrypt/live/siem.projectjupiter.in/privkey.pem
SSL_REDIRECT_HTTP=true

# =============================================================================
# FIREWALL CONFIGURATION (Production)
# =============================================================================
UFW_ENABLED=true
ALLOWED_PORTS=22,80,443,8080
BLOCKED_COUNTRIES=CN,RU,IR,KP
FAIL2BAN_ENABLED=true

# =============================================================================
# THREAT INTELLIGENCE CONFIGURATION (Production)
# =============================================================================
THREAT_INTEL_ENABLED=true
THREAT_INTEL_SOURCES=virustotal,abuseipdb,shodan
THREAT_INTEL_API_KEY_VT=your_virustotal_api_key
THREAT_INTEL_API_KEY_ABUSE=your_abuseipdb_api_key
THREAT_INTEL_API_KEY_SHODAN=your_shodan_api_key

# =============================================================================
# NOTIFICATION CONFIGURATION (Production)
# =============================================================================
NOTIFICATION_EMAIL_ENABLED=true
NOTIFICATION_SLACK_ENABLED=false
NOTIFICATION_WEBHOOK_ENABLED=false
REACT_APP_NOTIFICATION_EMAIL_ENABLED=true
REACT_APP_NOTIFICATION_SLACK_ENABLED=false
REACT_APP_NOTIFICATION_WEBHOOK_ENABLED=false

# =============================================================================
# CUSTOM CONFIGURATION (Production)
# =============================================================================
CUSTOM_FEATURES_ENABLED=true
EXPERIMENTAL_AI_FEATURES=false
BETA_FEATURES_ENABLED=false
REACT_APP_EXPERIMENTAL_FEATURES=false
REACT_APP_BETA_FEATURES=false

# Jupiter SIEM Native Production Environment
# Copy this to .env.native and customize for your environment

# Application Environment
APP_ENVIRONMENT=production

# Security Configuration
JWT_SECRET_KEY=change_me_generate_new_key_for_production
SESSION_SECRET=change_me_session_secret

# Database Configuration
DUCKDB_PATH=/var/lib/jupiter-siem/jupiter_siem.db

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=change_me_redis_password

# Email Configuration (Configure for production use)
EMAIL_HOST=smtp.outlook.com
EMAIL_PORT=587
EMAIL_USER=your-email@domain.com
EMAIL_PASSWORD=your-email-password
EMAIL_USE_TLS=true

# Admin Configuration
SUPER_ADMIN_EMAIL=admin@projectjupiter.in
SUPER_ADMIN_PASSWORD=ChangeMe123!
SUPER_ADMIN_TENANT_NAME=MainTenant

# Network Configuration
BACKEND_HOST=127.0.0.1
BACKEND_PORT=8001
FRONTEND_HOST=127.0.0.1
FRONTEND_PORT=3000

# Nginx Configuration
NGINX_PORT=80
NGINX_SSL_PORT=443
NGINX_SERVER_NAME=localhost

# CORS Configuration (Update for your domain)
CORS_ORIGINS=http://localhost,https://localhost,https://yourdomain.com

# SSL Configuration
SSL_ENABLED=true
SSL_CERT_PATH=/etc/ssl/certs/jupiter-siem.crt
SSL_KEY_PATH=/etc/ssl/private/jupiter-siem.key

# Monitoring Configuration
PROMETHEUS_ENABLED=true
PROMETHEUS_PORT=9090
GRAFANA_ENABLED=true
GRAFANA_PORT=3001

# Performance Configuration
WORKER_PROCESSES=auto
WORKER_CONNECTIONS=1024
KEEPALIVE_TIMEOUT=65
CLIENT_MAX_BODY_SIZE=10M

# Security Configuration
RATE_LIMIT_ENABLED=true
RATE_LIMIT_REQUESTS=100
RATE_LIMIT_WINDOW=60
FAIL2BAN_ENABLED=true
UFW_ENABLED=true

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *
BACKUP_RETENTION_DAYS=30
BACKUP_LOCATION=/var/backups/jupiter-siem

# Logging Configuration
LOG_LEVEL=INFO
LOG_PATH=/var/log/jupiter-siem
LOG_RETENTION_DAYS=30
LOG_FORMAT=json

# System Paths
SYSTEMD_PATH=/etc/systemd/system
NGINX_SITES_PATH=/etc/nginx/sites-available
SERVICE_USER=jupiter-siem
SERVICE_GROUP=jupiter-siem
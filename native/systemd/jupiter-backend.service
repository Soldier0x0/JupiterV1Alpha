[Unit]
Description=Jupiter SIEM Backend (Uvicorn)
After=network.target

[Service]
Type=simple
WorkingDirectory=%h/JupiterV1Alpha/backend
EnvironmentFile=%h/JupiterV1Alpha/native/.env
ExecStart=%h/JupiterV1Alpha/native/.venv/bin/uvicorn main:app --host 0.0.0.0 --port 8001 --log-level info
Restart=always
RestartSec=3
User=%i

[Install]
WantedBy=multi-user.target
